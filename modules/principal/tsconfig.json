{
  "compilerOptions": {
    "allowJs": true,
    
    
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],
    "module": "esnext",
    "target": "es5",
    
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    
    "rootDir": ".",
    // "baseUrl": "electron",
    // "outDir": "dist"
  },
  "include": [
    "electron/**/*",
    "../renderizador/**/*"
  ],
  "exclude": ["node_modules", "dist", "app"]
}

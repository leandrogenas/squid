{
    "name": "@squid/principal",
    "version": "0.0.1",
    "main": "dist/main.js",
    "types": "dist/main.d.ts",
    "license": "MIT",
    "private": true,
    "browser": {
        "fs": true,
        "path": true,
        "os": true
    },
    "scripts": {
        "clean": "rimraf dist",
        "dev": "nextron",
        "build": "nextron build && tsc .",
        "pack": "yarn build && electron-builder",
        "dist": "yarn build && electron-builder --dir",    
        "check": "tsc",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        
        "@types/jest": "^27.0.2",
        "@types/react": "^17.0.5",
        "@types/react-dom": "^17.0.3",
        "@babel/core": "^7.16.0",
        "@types/react-redux": "^7.1.16",
        "@types/styled-components": "^5.1.10",
        "@types/selenium-webdriver": "^4.0.13",
        "@types/uuid": "^8.3.0",
        
        "babel-plugin-transform-inline-environment-variables": "^0.4.3",
        "@babel/plugin-proposal-decorators": "^7.13.15",
        "@babel/preset-env": "^7.14.1",
        "@babel/preset-react": "^7.13.13",
        "@babel/preset-typescript": "^7.13.0",
        "@types/node": "^14.16",
        "electron-serve": "^1.1.0",
        "electron-builder": "^22.13.1",
        "electron-reload": "^2.0.0-alpha.1",
        "nextron": "^7.1.0",
        "rimraf": "^3.0.2",
        "electron": "^15.3.1",
        "ts-loader": "^9.2.3",
        "file-loader": "^6.2.0",
        "webpack": "^5.x",
        "typescript": "^4.4.4"
    },
    "dependencies": {
        "axios": "^0.24.0",
        "uuid": "^8.3.2",
        "dexie": "^3.0.3",
        "electron-chromedriver": "^13.0.0",
        "electron-download-manager": "^2.1.2",
        "electron-is-dev": "^2.0.0",
        "electron-store": "^8.0.1",
        "css-select": "^4.1.3",
        "selenium-webdriver": "^4.0.0"
    },
    "productName": "Squid",
    "build": {
        "appId": "dev.leand.squid",
        "productName": "Squid",
        "linux": {
            "target": ["deb", "snap", "rpm"],
            "category": "Utility"
        },
        "deb": {},
        "win": {
            "target": ["nsis"],
            "icon": "include/icons/squid.ico"
        },
        "nsis": {
            "installerIcon": "include/icons/squid.ico",
            "uninstallerIcon": "include/icons/squid.ico",
            "uninstallDisplayName": "Squid Uninstaller",
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}